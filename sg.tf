# Security Group pour le Master Node
resource "aws_security_group" "master_sg" {
  name        = "k8s-master-sg"
  description = "Allow communication for Kubernetes master node"
  vpc_id      = data.aws_vpc.selected.id

  ingress {
    from_port   = 6443
    to_port     = 6443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}

# Security Group pour les Worker Nodes
resource "aws_security_group" "worker_sg" {
  name        = "k8s-worker-sg"
  description = "Allow communication for Kubernetes worker nodes"
  vpc_id      = data.aws_vpc.selected.id

  ingress {
    from_port   = 10250
    to_port     = 10250
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}